<h2 id="书柜">书柜</h2>

<div id="douban">
  <div id="tabs">
    <a id="reading-tab" href="javascript:show('reading')" target="_blank" rel="external">在读(
      <%= reading.length %>)</a>
    <a id="wish-tab" href="javascript:show('wish')" target="_blank" rel="external">想读(
      <%= wish.length %>)</a>
    <a id="read-tab" href="javascript:show('read')" target="_blank" rel="external">已读(
      <%= read.length %>)</a>
  </div>

  <div id="collections">
    <div id="reading" class="hexo-douban-hide">
      <% reading.forEach(function(item){%>
        <% include bookWish.ejs %>
          <% }) %>
    </div>
    <div class="hexo-douban-clearfix"></div>
    <div id="wish" class="hexo-douban-hide">
      <% wish.forEach(function(item){%>
        <% include bookWish.ejs %>
          <% }) %>
    </div>
    <div class="hexo-douban-clearfix"></div>
    <div id="read" class="hexo-douban-hide">
      <% read.forEach(function(item){%>
        <% include bookRead.ejs %>
          <% }) %>
    </div>
    <div class="hexo-douban-clearfix"></div>
  </div>
</div>

<script>
  function show(id) {
    document.getElementById('reading').classList.remove('hexo-douban-active');
    document.getElementById('read').classList.remove('hexo-douban-active');
    document.getElementById('wish').classList.remove('hexo-douban-active');
    document.getElementById('reading').classList.add('hexo-douban-hide');
    document.getElementById('read').classList.add('hexo-douban-hide');
    document.getElementById('wish').classList.add('hexo-douban-hide');

    var ele = document.getElementById(id);
    ele.classList.remove('hexo-douban-hide');
    ele.classList.add('hexo-douban-active');

    document.getElementById('reading-tab').classList.remove('hexo-douban-active');
    document.getElementById('read-tab').classList.remove('hexo-douban-active');
    document.getElementById('wish-tab').classList.remove('hexo-douban-active');
    document.getElementById(id + '-tab').classList.add('hexo-douban-active');
  };
  show("reading")
</script>