<style>
  .hexo-douban-clearfix{
    clear:both;
  }
  #tabs{
    margin-bottom: 15px;
    margin-top:15px;
  }
  #tabs a {
    padding: 5px;
  }
  #tabs a.hexo-douban-active{
    background: #657b83;
    color: #fff;
  }
  #collections .hexo-douban-book{
    /*width: 100%;*/
    /*float: left;*/
    padding-bottom: 10px;
    position: relative;
    clear: both;
    min-height: 170px;
    padding: 10px 0;
    border-bottom: 1px #ddd solid;
  }
  .hexo-douban-book .hexo-douban-picture{
    position: absolute;
    left: 0;
    top: 10px;
    width: 100px;
  }
  .hexo-douban-book .hexo-douban-info{
    padding-left: 120px;
  }
  .hexo-douban-book .hexo-douban-meta{
    font-size: 12px;
    padding-right: 10px;
  }
  .hexo-douban-book .hexo-douban-comments{
    font-size: 12px;
  }
  .hexo-douban-hide{
    display: none;
  }
  #collections .hexo-douban-active{
    display: block;
  }
  @media screen and (max-width:600px) {
    #collections .hexo-douban-book{
      width: 100%;
    }
  }
  #refresh{
    color: red;
  }
</style>
<div>
  <blockquote>
      <p><%- quote %></p>
  </blockquote>
</div>

<div id="douban">
    <div id="tabs">
      <a id="wish-tab" href="javascript:show('wish')" target="_blank" rel="external">想玩(<%= wish.length %>)</a>
      <a id="played-tab" href="javascript:show('played')" target="_blank" rel="external">已玩(<%= played.length %>)</a>
      <a id="playing-tab" href="javascript:show('playing')" target="_blank" rel="external">在玩(<%= playing.length %>)</a>
    </div>

    <div id="collections">
      <div id="wish" class="hexo-douban-hide">
        <% wish.forEach(function(item){%>
          <% include gameWish.ejs %>
        <% }) %> 
      </div>
      <div class="hexo-douban-clearfix"></div>
      <div id="played" class="hexo-douban-hide">
        <% played.forEach(function(item){%>
          <% include gamePlayed.ejs %>
        <% }) %> 
      </div>
      <div class="hexo-douban-clearfix"></div>
      <div id="playing" class="hexo-douban-hide">
        <% playing.forEach(function(item){%>
          <% include gamePlaying.ejs %>
        <% }) %> 
      </div>
      <div class="hexo-douban-clearfix"></div>
    </div>
</div>

<script>
function show(id){
  document.getElementById('played').classList.remove('hexo-douban-active');
  document.getElementById('playing').classList.remove('hexo-douban-active');
  document.getElementById('wish').classList.remove('hexo-douban-active');
  document.getElementById('played').classList.add('hexo-douban-hide');
  document.getElementById('playing').classList.add('hexo-douban-hide');
  document.getElementById('wish').classList.add('hexo-douban-hide');

  var ele = document.getElementById(id);
  ele.classList.remove('hexo-douban-hide');
  ele.classList.add('hexo-douban-active');

  document.getElementById('played-tab').classList.remove('hexo-douban-active');
  document.getElementById('playing-tab').classList.remove('hexo-douban-active');
  document.getElementById('wish-tab').classList.remove('hexo-douban-active');
  document.getElementById(id+'-tab').classList.add('hexo-douban-active');
  };
 show("played")
</script>

