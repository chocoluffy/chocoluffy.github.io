.sidebar {

  background: url("https://raw.githubusercontent.com/chocoluffy/blog_assets/master/side-column-background.jpg");
  background-size: cover;
  position: fixed;
  right: 0;
  top: 0;
  bottom: 0;

  width: 0;
  z-index: $zindex-6;
  box-shadow: inset 0 2px 6px black;
  
  -webkit-transform: translateZ(0); // http://stackoverflow.com/questions/17079857/position-fixed-broken-in-chrome-with-flash-behind

  a {
    color: $grey-dark;
    border-bottom-color: $black-light;
    &:hover { color: $gainsboro; }
  }

  +tablet() {
    display: none !important;
  }
  +mobile() {
    display: none !important;
  }
}

.sidebar:before {
  pointer-events: none;
  content: "";
  display: block;
  z-index: $zindex-5;
  width: 135%;
  left: 0;
  height: 100%;
  position: absolute;
  background: linear-gradient(to left, rgba(0, 0, 0, 0), $black-deep);
}


.sidebar-inner {
  z-index: 2000;
  position: relative;
  padding: 20px 10px;
  color: $grey-dark;
  text-align: center;
}

@import "sidebar-toggle";
@import "sidebar-author";
@import "site-state";
@import "sidebar-feed-link";
@import "sidebar-author-links";
@import "sidebar-blogroll.styl";
@import "sidebar-nav";
@import "sidebar-toc";

