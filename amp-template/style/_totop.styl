//-----------------------------
// totop
//-----------------------------
#totop
  position: fixed
  bottom: font-size * 2
  right: font-size * 1.6
  font-size: font-size * 1.2
  z-index: 995

  a
    background: rgba(color-h, 0.6)
    text-decoration: none
    color: color-background
    padding: font-size * 0.8
    border-radius: 50%

    &:before
      content: "\f062"
      font-family: font-awesome
      font-size: font-size * 1.2
    &:hover
      text-decoration: none
      background: rgba( darken(color-h , 20), 1.0)
      color: color-background
      line-height: 2.3em
